<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="@dimen/activity_margin_half"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.assignment.spark.galleryimagesupload.crop.PolygonView
        android:id="@+id/polygonView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left">

        <ImageView
            android:id="@+id/rotate_btn"
            android:layout_width="@dimen/rotate_btn_size"
            android:layout_height="@dimen/rotate_btn_size"
            android:layout_centerHorizontal="true"
            android:src="@drawable/rotate_btn" />

        <TextView
            android:id="@+id/crop_accept_btn_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/rotate_btn"
            android:text="@string/rotate"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/text_size_heading_13.5" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right">

        <ImageView
            android:id="@+id/crop_btn"
            android:layout_width="@dimen/rotate_btn_size"
            android:layout_height="@dimen/rotate_btn_size"
            android:layout_centerHorizontal="true"
            android:src="@drawable/crop_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/crop_btn"
            android:text="@string/accept_crop"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/text_size_heading_13.5" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center">

        <ImageView
            android:id="@+id/accept_btn"
            android:layout_width="@dimen/accept_btn_size"
            android:layout_height="@dimen/accept_btn_size"
            android:layout_centerHorizontal="true"
            android:src="@drawable/accept" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/accept_btn"
            android:text="@string/accept_original"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/text_size_heading_13.5" />
    </RelativeLayout>
</FrameLayout>